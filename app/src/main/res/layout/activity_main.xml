<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="简单的倒计时使用" />

    <Button
        android:id="@+id/btn_timer"
        style="@style/textView_show"
        android:text="@string/title_timer_user" />

    <Button
        android:id="@+id/btn_hanlder"
        style="@style/textView_show"
        android:text="@string/title_hanlder_user" />

    <Button
        android:id="@+id/btn_countTime"
        style="@style/textView_show"
        android:text="@string/title_countdown_user" />

    <Button
        android:id="@+id/btn_valueAnimator"
        style="@style/textView_show"
        android:text="@string/title_valueAnimatior_user" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="其他的功能" />

    <Button
        android:id="@+id/btn_countTime_custom"
        style="@style/textView_show"
        android:text="@string/title_countTime_custom" />

    <Button
        android:id="@+id/btn_sms"
        style="@style/textView_show"
        android:text="短信倒计时" />

</LinearLayout>
